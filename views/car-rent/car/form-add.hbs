{{> head}}
{{!-- {{> navbar}} --}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

<div class="container text center my-4 d-flex justify-content-center">

  <div class="card text-dark bg-light mb-3" style="width: 30rem;">
    <div class="card-header d-flex justify-content-between">
      {{title}}
      <span><a class="link-dark" href="/"><i class="fas fa-times"></i></a></span>
    </div>
    <div class="card-body">

      <form action="/car" method="POST" enctype="multipart/form-data">
  
        <div class="file-input-group text-start">
          <input type="file" hidden id="file" aria-label="file upload" name="image" onchange="handleChange()">
          <label for="file">Attach Thumbnail <img src="/static/icons/attach.svg" alt=""></label>
        </div>
        <div id="preview-thumbnail" class="text-start"></div>

        <div class="form-floating mb-3">
          <select class="form-select" id="type_id" name="type_id" aria-label="Floating Select">
            <option selected disabled>- Select Option-</option>
            {{#each types }}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
          <label for="type_id">Type Car</label>
        </div>

        <div class="form-floating mb-3">
          <select class="form-select" id="brand_id" name="brand_id" aria-label="Floating Select">
            <option selected disabled>- Select Option-</option>
            {{#each brands }}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
          <label for="brand_id">Brand Car</label>
        </div>

        <div class="form-floating">
          <input type="text" class="form-control" id="name" name="name" placeholder="example">
          <label for="name">Name</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="plat_number" name="plat_number" placeholder="example">
          <label for="plat_number">Plat Number</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="price" name="price" placeholder="example">
          <label for="price">Price</label>
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>

      </form>

    </div>
  </div>

</div>

<script>
  function handleChange() {
    const previewElement = document.getElementById("preview-thumbnail")
    const value = URL.createObjectURL(event.target.files[0])
    previewElement.innerHTML = `<img src=${value} style="width: 250px;" class="mb-3">`
  }
</script>

{{>footer}}