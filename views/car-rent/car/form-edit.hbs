{{>head}}
{{!-- {{>navbar}} --}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

<div class="container text center mb-5 d-flex justify-content-center">

  <div class="card text-dark bg-light mb-3" style="width: 30rem;">
    <div class="card-header d-flex justify-content-between">
      {{title}}
      <span><a class="link-dark" href="/"><i class="fas fa-times"></i></a></span>
    </div>
    <div class="card-body">

      <form action="/car/edit/{{car.id}}" method="POST" enctype="multipart/form-data">
    
        <input type="hidden" name="id" value={{car.id}}>

        <input type="hidden" name="oldImage" value={{car.image}}>
        <div class="file-input-group text-start">
          <input type="file" hidden id="file" aria-label="file upload" name="image" onchange="handleChange()">
          <label for="file">Attach Thumbnail <img src="/static/icons/attach.svg" alt=""></label>
        </div>
        <div id="preview-thumbnail" class="text-start">
          <img src={{car.image}} style="width: 250px;" class="mb-3">
        </div>

        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="type_id" name="type_id" value="{{car.type_id}}">
          <label for="type_id">Type</label>
        </div>

        <div class="form-floating">
          <input type="text" class="form-control" id="brand_id" name="brand_id"  value="{{car.brand_id}}">
          <label for="brand_id">Brand</label>
        </div>    

        <div class="form-floating">
          <input type="text" class="form-control" id="name" name="name"  value="{{car.name}}">
          <label for="name">Name</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="plat_number" name="plat_number"  value="{{car.plat_number}}">
          <label for="plat_number">Plat Number</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="price" name="price" value="{{car.price}}">
          <label for="price">Price</label>
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
      </form>

    </div>
  </div>

</div>

<script>
  function handleChange() {
    const previewElement = document.getElementById("preview-thumbnail")
    const value = URL.createObjectURL(event.target.files[0])
    previewElement.innerHTML = `<img src=${value} style="width: 250px;" class="mb-3">`
  }
</script>

{{>footer}}