{{> head}}

{{> sidebar}}

<main id="brand">

  {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
      {{message.message}}
    </div>
  {{/if}}
  
  <h4><strong>{{title}}</strong></h4>
  <hr>
  <div class="mx-5">
    <a href="/brand/add" class="btn btn-success my-3">
      <span>
        <i class="fas fa-plus"></i>
      </span>
        Add Brand
    </a>
    <table class="table table-striped">
      <thead class="table-dark">
        <th>No</th>
        <th>Brand</th>
        <th>Action</th>
      </thead>
      <tbody>
        {{#each brands}}
        <tr>
          <td class="table-no">{{this.no}}</td>
          <td>{{this.name}}</td>
          <td class="text-center table-action">
            <a href="/brand/edit/{{this.id}}" class="btn btn-warning text-white">
              <span>
                <i class="fas fa-edit"></i>
              </span>
            </a>
            <a href="/brand/delete/{{this.id}}" class="btn btn-danger">
              <span><i class="fas fa-trash"></i></span>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</main>

{{> footer}}