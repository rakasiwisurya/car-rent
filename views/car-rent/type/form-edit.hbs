{{>head}}
{{>navbar}}

<main>

  {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
      {{message.message}}
    </div>
  {{/if}}

  <div class="container text center mb-5 d-flex justify-content-center">

    <div class="card text-dark bg-light mb-3" style="width: 30rem;">
      <div class="card-header">Form Edit</div>
      <div class="card-body">

        <form action="/type/edit/{{typeCar.id}}" method="POST" enctype="multipart/form-data">
      
          <input type="hidden" name="id" value={{typeCar.id}}>

          <div class="form-floating">
            <input type="text" class="form-control" id="name" name="name"  value="{{typeCar.name}}">
            <label for="name">Name</label>
          </div>

          <button type="submit" class="btn btn-dark">Submit</button>
        </form>

      </div>
    </div>

  </div>

</main>

<script>
  function handleChange() {
    const previewElement = document.getElementById("preview-thumbnail")
    const value = URL.createObjectURL(event.target.files[0])
    previewElement.innerHTML = `<img src=${value} style="width: 250px;" class="mb-3">`
  }
</script>