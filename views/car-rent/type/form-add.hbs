{{> head}}
{{> navbar}}

<main>
  {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
      {{message.message}}
    </div>
  {{/if}}
  
  <div class="container text center mb-5 d-flex justify-content-center">

    <div class="card text-dark bg-light mb-3" style="width: 30rem;">
      <div class="card-header">Form Add</div>
      <div class="card-body">

        <form action="/type" method="POST" enctype="multipart/form-data">

          <div class="form-floating">
            <input type="text" class="form-control" id="name" name="name" placeholder="example">
            <label for="name">Name</label>
          </div>
          <div class="preview-content"></div>

          <button type="submit" class="btn btn-dark">Submit</button>

        </form>

      </div>
    </div>

  </div>
</main>

{{>footer}}