{{>head}}
{{!-- {{>navbar}} --}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

<div class="container text center my-5 d-flex justify-content-center">

  <div class="card shadow text-dark bg-light mb-3" style="width: 30rem;">
    <div class="card-header d-flex justify-content-between">
      {{title}}
      <span><a class="link-dark" href="/rent"><i class="fas fa-times"></i></a></span>
    </div>
    <div class="card-body">

      <form action="/rent/edit/{{rent.id}}" method="POST">
    
        <input type="hidden" name="id" value={{rent.id}}>

        {{!-- <div class="form-floating mb-3">
          <input type="text" class="form-control" id="car_id" name="car_id" placeholder="example" value="{{rent.car_id}}">
          <label for="car_id">Car</label>
        </div> --}}

        <div class="form-floating mb-3">
          <select class="form-select" id="car_id" aria-label="Floating label select car">
            <optgroup label="Default">
              <option value="{{rent.carId}}">{{rent.carName}}</option>
            </optgroup>
            <optgroup label="Cars">
              {{#each cars }}              
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </optgroup>
          </select>
          <label for="car_id">Provinsi</label>
        </div>

        <div class="form-floating">
          <input type="date" class="form-control" id="borrow_date" name="borrow_date" placeholder="example" value="{{rent.borrowDate}}">
          <label for="borrow_date">Borrow Date</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="date" class="form-control" id="return_date" name="return_date" placeholder="example"  value="{{rent.returnDate}}">
          <label for="return_date">Retrun Date</label>
        </div>
        
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="sub_total" name="sub_total" placeholder="example" value="{{rent.sub_total}}">
          <label for="sub_total">Sub Total</label>
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
      </form>

    </div>
  </div>

</div>

{{>footer}}