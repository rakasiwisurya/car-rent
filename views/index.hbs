{{> head}}
{{!-- {{> navbar}} --}}

{{> sidebar}}

<main>
  {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
      {{message.message}}
    </div>
  {{/if}}

  <div class="car-content">
    <div class="car">
      {{#if cars}}
      <div class="container">
        <div class="row mb-4">
          <h2 class="h5"><bold>New Car Available For Rent</bold></h2>
          <hr>
          <a href="/car/{{cars.0.id}}" class="card rounded shadow p-3 text-decoration-none link-dark">
            <div class="row main-content">
              <div class="col-4">
                <img src="{{cars.0.image}}" class="img-thumbnail" alt="car thumbnail" style="width:350px; height:250px;">
              </div>
              <div class="col-8">
                <h3 class="mb-2" style="font-weight: 600;">{{cars.0.name}}</h3>

                <div class="text-desc-content">
                  <p class="mb-2">{{cars.0.plat_number}} <b>(${{cars.0.price}})</b></p>
                  <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Omnis, sed corrupti, perferendis recusandae distinctio corporis vero optio animi sunt est repudiandae doloribus nisi quisquam numquam dicta reprehenderit deserunt sint ratione.
                    <br><br>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Omnis, sed corrupti, perferendis recusandae distinctio corporis vero optio animi sunt est repudiandae doloribus nisi quisquam numquam dicta reprehenderit deserunt sint ratione.
                  </p>
                </div>
              </div>
            </div>
          </a>
        </div>
        <div class="row mb-4 g-2">
          <h2 class="h5"><bold>All Car Rent Available</bold></h2>
          <hr>
          {{#each cars}}
          <div class="col-4">
            <a href="/car/{{this.id}}" class="card shadow px-0 text-decoration-none link-dark">
              <img src="{{this.image}}" class="card-img-top" alt="car thumbnail" style="width: 100%; height: 200px;">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.plat_number}} <b>(${{this.price}})</b></p>
                <form action="/rent/add" method="POST" class="d-flex">
                  <input type="hidden" name="car_id" value={{this.id}}>
                  <input type="hidden" name="sub_total" value={{this.price}}>
                  <button type="submit" class="btn btn-success">Rent</button>
                </form>
              </div>
            </a>
          </div>
          {{/each}}
        </div>
        <div class="row g-2">
          <h2 class="h5"><bold>All Car Rented</bold></h2>
          <hr>
          {{#each renteds}}
          <div class="col-4">
            <a href="/car/{{this.id}}" class="card shadow px-0 text-decoration-none link-dark">
              <img src="{{this.image}}" class="card-img-top" alt="car thumbnail" style="width: 100%; height: 200px;">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.plat_number}} <b>(${{this.price}})</b></p>
                <form action="/rent/return" method="POST" class="d-flex">
                  <input type="hidden" name="car_id" value={{this.id}}>
                  <button type="submit" class="btn btn-danger">Return</button>
                </form>
              </div>
            </a>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}
    </div>
  </div>

  {{!-- {{> home}} --}}
</main>

{{> footer}}